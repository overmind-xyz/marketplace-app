// Create Review for Seller/Item
const reviewsContainer = document.getElementById('reviews');

function createReview(sellerId, itemId, rating, comment) {
  // Create a review object with sellerId, itemId, rating, and comment

  // Store the review object in an array or a database

  // Display the review on the seller's profile or item's page
  const reviewElement = document.createElement('div');
  reviewElement.innerHTML = `
    <p>Rating: ${rating}</p>
    <p>Comment: ${comment}</p>
  `;
  reviewsContainer.appendChild(reviewElement);
}
